extends ./layouts/embed

include ./mixins/map-items.jade
-env = 'http://www.solvee.click/maps/show/'

block js
  script(src="/assets/main.js")

block title
  title= name

block content
  .map-wrapper
    .map-header(style='background-image:url(' + mapCoverUrl + ')')
      h2.map-title= name
    .map-row
      each option, index in map.options
        +map-item(option, 'col-' + index)
    +child-rows(map.options)
    .map-meta
      .creator Created by:
        a.creator-name(href='http://www.localhost:3000/maps/users/'+ userId)= username
  header.small
    .header-wrapper
      a(href='/maps/list')
        img.header-logo(src='/assets/logo/logo_white.svg')
