extends ./layouts/default

include ./mixins/map-items.jade
-env = 'http://www.solvee.click/maps/show/'

block title
  title= 'Your own decision map'

block js
  script(src="/assets/builder.js")

block header-text
  h1= 'Build your own decision map'

block content
  .map-wrapper.builder
    form#map-form
      .field-wrapper.map-meta
        .field-container.map-title
          label(for='map-title') Map title
          input#map-title(type='text', placeholder='Enter map title', required='')
        // TODO: init from backend /languages
        .field-container.map-language
          label Map language
          .radio-groups-wrapper
            .radio-group
              label(for='lang-en')
                img(src='/assets/flag_gb.svg', alt='')
              input#lang-en(type='radio', name='lang', value='en')
            .radio-group
              .radio-group
                label(for='lang-pl')
                  img(src='/assets/flag_pl.svg', alt='')
                input#lang-pl(type='radio', name='lang', value='pl')
      #so='Please enable javascript'
      .field-container.actions
        button#save-tree-button(type='submit') Save


