extends ./layouts/default

block title
    title Edit user

block header-text
    h1= 'Account settings'

block js
    script(src="/assets/users.js")

block content
    form#user-form
        div
            | Name
            input#name(value=user.name,required=true)
        div
            | Email
            input#email(value=user.email, type='email',required=true)
        button(type='submit') Submit

    div
        a(href='/maps/current') My maps