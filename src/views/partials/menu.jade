if (currentUser != undefined)
  ul.menu
    li#name-menu
      a(href='/users/edit') Hi, #{currentUser.name}
  ul.menu
    li#recent-maps-menu(class=url === "/maps/list" ? "active" : "")
      a(href='/maps/list') recent
    li#build-menu(class=url === '/maps/build' ? "active" : "")
      a(href='/maps/build') Create map
    li#user-menu(class=url === '/users/edit' ? "active" : "")
      a(href='/users/edit') Account
    li#logout-menu(class=url === '/auth/logout' ? "active" : "")
      a(href='/auth/logout') Logout
else
  ul.menu
    li#login-menu
      a(href='/auth/facebook') Login

