extends ./layouts/default

include ./mixins/map-items.jade
-env = 'http://www.solvee.click/'

block metadata
  meta(property='og:url', content=env+url)
  meta(property='og:type', content='website')
  meta(property='og:title', content=name)
  meta(property='og:image', content=mapCoverUrl)


block js
  script(src="/assets/main.js")

block title
  title= name

block header-text
  h1= name

block content
  div(class='map-wrapper ' + style)
    .map-header(style='background-image:url(' + mapCoverUrl  + ')')
      h2.map-title= name
    .map-meta
      .creator Created by:
        a.creator-name(href='http://solvee.click/maps/users/'+ userId)= username
    .map-row
      each option, index in map.options
        +map-item(option, 'col-' + index)
    +child-rows(map.options)
    if (isOwner)
      .owner-buttons
        a.btn-secondary#edit-map(href='http://solvee.click/maps/build/' + id) Edit
        a.btn-secondary#delete-map Delete
    include ./partials/sharing.jade
